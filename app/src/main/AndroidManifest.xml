<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.roundtrip.roundtrip"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Enable BLE and set it as mandatory
    -->
    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true"/>

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.roundtrip.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name="com.roundtrip.services.RTDemoService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.eveningoutpost.dexdrip.BgEstimate"/>
                <action android:name="com.gxwtech.rtdemo.Services.RTDemoService"/>
            </intent-filter>
        </service>

        <activity
            android:name="com.roundtrip.PumpSettingsActivity"
            android:label="@string/title_activity_pump_settings"
            android:parentActivityName="com.roundtrip.RTDemoSettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.roundtrip.RTDemoSettingsActivity"/>
        </activity>
        <activity
            android:name="com.roundtrip.TempBasalActivity"
            android:label="@string/title_activity_temp_basal"
            android:parentActivityName="com.roundtrip.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.roundtrip.MainActivity"/>
        </activity>
        <activity
            android:name="com.roundtrip.MonitorActivity"
            android:label="@string/title_activity_monitor"
            android:parentActivityName="com.roundtrip.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.roundtrip.MainActivity"/>
        </activity>
        <activity
            android:name="com.roundtrip.MongoDBSettingsActivity"
            android:label="@string/title_activity_mongo_dbsettings"
            android:parentActivityName="com.roundtrip.RTDemoSettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.roundtrip.RTDemoSettingsActivity"/>
        </activity>
        <activity
            android:name="com.roundtrip.RTDemoSettingsActivity"
            android:label="@string/title_activity_rtdemo_settings"
            android:parentActivityName="com.roundtrip.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.roundtrip.MainActivity"/>
        </activity>
        <activity
            android:name="com.roundtrip.PersonalProfileActivity"
            android:label="@string/title_activity_personal_profile"
            android:parentActivityName="com.roundtrip.RTDemoSettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.roundtrip.RTDemoSettingsActivity"/>
        </activity>
        <activity
            android:name="com.roundtrip.UtilityActivity"
            android:label="@string/title_activity_utility"
            android:parentActivityName="com.roundtrip.RTDemoSettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.roundtrip.RTDemoSettingsActivity"/>
        </activity>
        <activity
            android:name="com.roundtrip.LoggingSettingsActivity"
            android:label="Logging Settings"
            android:parentActivityName="com.roundtrip.RTDemoSettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.roundtrip.RTDemoSettingsActivity"/>
        </activity>
        <activity
            android:name="com.roundtrip.SuspendAPSActivity"
            android:label="@string/title_activity_suspend_aps"
            android:parentActivityName="com.roundtrip.MonitorActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.roundtrip.MonitorActivity"/>
        </activity>
    </application>
</manifest>
